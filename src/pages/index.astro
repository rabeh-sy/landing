---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'رابح — حلول سحابية للمحاسبة وادارة الأعمال',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'ابدأ الآن',
        href: 'https://wa.me/+963997325331?text=%D8%A7%D9%84%D8%B3%D9%84%D8%A7%D9%85%20%D8%B9%D9%84%D9%8A%D9%83%D9%85%D8%8C%20%D8%A3%D9%88%D8%AF%20%D9%85%D8%B9%D8%B1%D9%81%D8%A9%20%D8%A7%D9%84%D9%85%D8%B2%D9%8A%D8%AF%20%D8%B9%D9%86%20%D8%A8%D8%B1%D9%86%D8%A7%D9%85%D8%AC%D9%83%D9%85',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
      { text: 'استكشف', href: '#features' },
    ]}
    image={{ src: '~/assets/images/hero-image.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      نظام محاسبة  <span class="text-accent dark:text-white">سحابي متكامل</span>
      جاهز لعملك
    </Fragment>

    <Fragment slot="subtitle">
      نقدّم لك نظامنا المُخصص لإدارة المحاسبة والمبيعات والمخزون عن بعد — دون الحاجة لأي معرفة تقنية. كل شيء يعمل على السحابة، مما يتيح لك إدارة عملك من أي مكان وفي أي وقت. مثالي للشركات الصغيرة والمتوسطة في سوريا، مع دعم كامل باللغة العربية.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="فلسفتنا:" description="تمكين التجار وأصحاب الأعمال من ادارة أعمالهم بسهولة وكفاءة، ومن أي مكان" />

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="الميزات"
    title="مميزات تساعدك على إدارة عملك بثقة"
    subtitle="نقدم لك حلاً متكاملاً لإدارة جميع جوانب عملك من مكان واحد — دون تعقيد، وبدون الحاجة لمهارات تقنية."
    items={[
      {
        title: 'إدارة الحسابات',
        description:
          ' تابع الإيرادات والمصروفات، وأصدر التقارير المالية بدقة واحترافية.',
        icon: 'tabler:report-money',
      },
      {
        title: 'إدارة المبيعات والفواتير',
        description:
          'أنشئ فواتير احترافية، وتتبع المدفوعات، وأرسل تنبيهات تلقائية للعملاء.',
        icon: 'tabler:file-invoice',
      },
      {
        title: 'إدارة المخزون',
        description:
          'تتبّع المنتجات وحركة المخزون بشكل لحظي، وراقب الكميات في كل مستودع.',
        icon: 'tabler:packages',
      },
      {
        title: 'الوصول من أي مكان',
        description:
          'كل بياناتك مخزنة بأمان في السحابة، ويمكنك إدارتها من أي جهاز وفي أي وقت.',
        icon: 'tabler:cloud-computing',
      },
      {
        title: 'دعم باللغة العربية',
        description:
          "لوحة تحكم وواجهات استخدام كاملة بالعربية، ودعم فني مخصص للسوق السوري.",
        icon: 'tabler:message-language',
      },
      {
        title: 'صلاحيات متعددة للمستخدمين',
        description:
          'خصص صلاحيات لكل موظف بحسب مهامه داخل النظام.',
        icon: 'tabler:users',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="ابدأ اليوم"
    title="نظام ذكي لإدارة أعمالك بكل سهولة"
    items={[
      {
        title: 'حل سحابي بالكامل',
        description:
          'استمتع بحرية الوصول إلى نظامك من أي مكان وفي أي وقت، دون الحاجة لتنزيل أو تثبيت برامج.',
      },
      {
        title: 'متوافق مع جميع الأجهزة',
        description:
          'اعمل من الهاتف، التابلت أو الحاسوب بسهولة تامة، مع تجربة استخدام سلسة على كل الشاشات.',
      },
      {
        title: 'أمان وحماية للبيانات',
        description:
          'نحافظ على بياناتك في بيئة سحابية مؤمنة، مع نسخ احتياطي دوري وتشفير قوي.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Colorful Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">إدارة أعمالك بذكاء عصري</h3>
      اكتسب ميزة تنافسية من خلال اعتماد ممارسات حديثة وتقنيات موثوقة.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'تكامل كامل بين الأقسام',
        description: `كل شيء مترابط: المحاسبة، المبيعات، المخزون، الموارد البشرية. لا حاجة للربط بين برامج مختلفة — كل شيء في نظام واحد.`,
      },
      {
        title: 'تتبّع دقيق للمخزون',
        description:
          'راقب حركة المنتجات، الكميات، الطلبات، والتنبيهات في الوقت الحقيقي لتفادي النقص أو التكدّس.',
      },
      {
        title: 'تقارير لحظية قابلة للتخصيص',
        description:
          "احصل على تقارير مالية وتشغيلية فورية تساعدك على اتخاذ قرارات مبنية على بيانات دقيقة.",
      },
      {
        title: 'أتمتة العمليات الروتينية',
        description:
          'قلل من الأخطاء اليدوية من خلال أتمتة الفواتير، التنبيهات، المهام الدورية، وسير العمل الداخلي.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1600132806370-bf17e65e942f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2194&q=80',
      alt: 'Blueprint Image',
    }}
  >
    <Fragment slot="content">سيطر على أعمالك من مكان واحد.</Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    isReversed
    title="ابدأ مرحلة جديدة من نجاح عملك مع برنامجنا"
    items={[
      {
        title: '١: <span class="font-medium">احجز استشارة مجانية</span>',
        description:
          "تحدث معنا لفهم طبيعة عملك واحتياجاتك، وسنرشدك لأفضل طريقة للاستفادة من النظام.",
        icon: 'tabler:calendar-search',
      },
      {
        title: '٢: <span class="font-medium">إعداد النظام وتخصيصه</span>',
        description:
          "نقوم بتجهيز النظام وتكييفه ليتوافق مع نشاطك، من الفواتير إلى التقارير وحتى صلاحيات الموظفين.",
        icon: 'tabler:settings-cog',
      },
      {
        title: '٣: <span class="font-medium">تدريبك وتشغيل النظام</span>',
        description:
          'نقدّم لك جلسة تدريب بسيطة وسهلة، وبعدها تبدأ باستخدام النظام مباشرة بدون تعقيدات.',
        icon: 'tabler:school',
      },
      {
        title: 'ستكون جاهز للانطلاق!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />

  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="تعرّف على المزيد في مدونتنا"
    information={`تُستخدم هذه المدونة لنشر مقالات وشروحات تهم أصحاب الأعمال. كل مقالة ستكون مهمة تساعدك على فهم أفضل لكيفية
     إدارة شركتك بفعالية باستخدام أنظمة سحابية حديثة.
      هدفنا هو تمكينك من تطوير عملك بذكاء — من المحاسبة إلى العمليات اليومية. شكرًا لثقتك.
                `}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="أسئلة متكررة"
    subtitle="استكشف الإجابات التالية لتتعرّف على أهم ميزات نظامنا وكيف يمكن أن يساهم في تطوير أعمالك وتسهيل إدارتها."
    tagline="لديك أسئلة؟"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'لماذا أحتاج إلى نظام سحابي لإدارة أعمالي؟',
        description:
          "الأنظمة التقليدية لم تعد كافية لمواكبة متطلبات السوق الحديثة. النظام السحابي يمنحك مرونة الوصول من أي مكان، وتكامل بين الأقسام، وأمان عالي للبيانات — كل ذلك بدون تكلفة صيانة أو أجهزة إضافية.",
      },
      {
        title: 'ما الذي أحتاجه للبدء؟',
        description:
          'كل ما تحتاجه هو اتصال بالإنترنت، واستشارة بسيطة معنا لفهم طبيعة عملك. بعدها نقوم نحن بكل الخطوات التقنية — لا حاجة لأي خبرة مسبقة.',
      },
      {
        title: 'هل يمكن تخصيص النظام حسب طبيعة عملي؟',
        description:
          "نعم، نقوم بتكييف النظام ليتناسب مع نشاطك التجاري، سواء كنت تعمل في المبيعات، التصنيع، الخدمات، أو غيرها. من إعداد الفواتير إلى هيكلة التقارير — كل شيء قابل للتخصيص.",
      },
      {
        title: "هل بياناتي ستكون آمنة؟",
        description:
          "نأخذ الأمان بجدية تامة. يتم حفظ بياناتك في بيئة سحابية مشفّرة، مع نسخ احتياطي تلقائي ودوري. لا يمكن الوصول إليها إلا من قبل المخوّلين بذلك.",
      },
      {
        title: 'هل أحتاج إلى موظفين مختصين لتشغيل النظام؟',
        description:
          "ليس بالضرورة. واجهة النظام سهلة، والتدريب الذي نقدمه كافٍ لتشغيله بكفاءة. كما يمكنك دائماً التواصل معنا عند الحاجة للدعم أو التوسعة.",
      },
      {
        title: 'هل يمكن التوسّع لاحقًا إذا نما عملي؟',
        description:
          "بالتأكيد. النظام مرن وقابل للنمو، ويمكنك إضافة مستخدمين، أقسام، أو ميزات جديدة في أي وقت دون الحاجة لإعادة بناء كل شيء من البداية.",
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'ابدأ الآن',
        href: 'https://wa.me/+963997325331?text=%D8%A7%D9%84%D8%B3%D9%84%D8%A7%D9%85%20%D8%B9%D9%84%D9%8A%D9%83%D9%85%D8%8C%20%D8%A3%D9%88%D8%AF%20%D9%85%D8%B9%D8%B1%D9%81%D8%A9%20%D8%A7%D9%84%D9%85%D8%B2%D9%8A%D8%AF%20%D8%B9%D9%86%20%D8%A8%D8%B1%D9%86%D8%A7%D9%85%D8%AC%D9%83%D9%85',
        target: '_blank',
        icon: 'tabler:brand-whatsapp',
      },
    ]}
  >
    <Fragment slot="title">
    نظام&nbsp;سحابي&nbsp;+&nbsp;<br class="block sm:hidden" />
    <span class="sm:whitespace-nowrap">إدارة أعمال متكامل</span>
    </Fragment>

    <Fragment slot="subtitle">
      كن مستعدًا للمفاجأة من قوة نظامنا السحابي. <br class="hidden md:inline" />
      لا تضيع وقتك في الحلول المعقدة! 😊
    </Fragment>
  </CallToAction>
</Layout>
